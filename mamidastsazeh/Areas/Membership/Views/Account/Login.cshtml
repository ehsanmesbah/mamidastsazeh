@model UserLoginViewModel

@{
    ViewBag.Title = "ورود";
    Layout = "_Layout";
}
<div class="container-fluid">
   
        <div class="d-flex flex-column align-items-center justify-content-center w-100">

            <div class="card col-10 col-md-6 col-lg-6 shadow mt-3">
                <div class="card-body">
                    <h1 class="text-center mb-2" style="color:#ea1d5d;">ورود به مامی دست سازه</h1>
                    <div class="text-center w-100">
                        <a asp-action="VerifyMobile" class="btn btn-link text-decoration-none text-center" asp-route-returnUrl="@Model.ReturnUrl" style="color:blue;">
                            اگر عضو نیستید برای عضویت اینجا را کلیک کنید
                        </a>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="validation-error-message"></div>

                    <form asp-action="Login" method="post" id="loginForm">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label class="sr-only" asp-for="Username"></label>
                            <span asp-validation-for="Username" class="validation-error-message"></span>
                            <input asp-for="Username" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="Password"></label>
                            <span asp-validation-for="Password" class="validation-error-message"></span>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group w-100">
                            <button type="submit" class="register-btn btn w-100" >ورود</button>
                           
                        </div>
                        
                        <div class="form-group w-100">
                            <a asp-action="ResetPassword" class="btn btn-link text-decoration-none" asp-route-returnUrl="@Model.ReturnUrl"  style="color:#ea1d5d;">
                                رمز عبور خود را فراموش کردم
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
</div>

    @section ViewScript  {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    }
