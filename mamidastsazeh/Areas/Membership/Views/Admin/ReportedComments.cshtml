@model IEnumerable<Report>
@{

    Layout = "_Layout";
}

<div class="container">
    <form asp-action="Delete" asp-controller="Post" style="width:100%">

       
        <button type="submit" class="btn btn-pink mb-2">حذف</button>
    </form>

    <div class="d-flex justify-content-center w-100">
        <table class="table table-striped table-bordered text-center w-100">
            <thead>
                <tr>

                    <th>متن شکایت</th>
                    <th>شاکی</th>
                    <th>عنوان کامنت</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {

                    <tr class="ReportRow">

                        <td>@report.Description</td>
                        <td>
                            @if (report.User != null)
                            {
                                @report.User.Mobile
                            }
                        </td>
                        <td>@report.PostComment.Text</td>

                        <td>
                            <a data-id=@report.Id class="btn btn-primary btn-sm" onclick="acceptCommentReport(this)" title="تایید">
                                <i class="fas fa-check"></i>
                            </a>
                            <a data-id=@report.Id onclick="rejectCommentReport(this)" class="btn btn-danger btn-sm text-white" title="رد">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>


@section ViewScript{
    <script src="~/js/navbar.min.js"></script>
    <script src="~/js/JavaScript.min.js"></script>
    <script src="~/js/Managment.min.js"></script>
}
