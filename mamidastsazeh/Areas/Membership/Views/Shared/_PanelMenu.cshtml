<div class="panel-menu">
    @if (!Context.User.IsInRole("MamiAdministrator")) { 
        <div class="panel-description pb-3">

            <a is-active-route asp-action="Index" asp-controller="Panel">
                <span class="d-flex">
                    <i class="fas fa-mug-hot"></i>
                    <span>
                        میز کار
                    </span>
                </span>
            </a>
        </div>
    }
<ul class="pr-1">
    @if (Context.User.IsInRole("MamiAdministrator"))
    {
        <li>
            <a is-active-route
               asp-action="NewPosts" asp-controller="Admin" asp-area="Membership">
                <span class="d-flex align-items-center">
                    <i class="fas fa-users-cog"></i>
                    <span>آموزشهای ارسالی جدید</span>
                </span>
            </a>
        </li>
        <li>
            <a is-active-route
               asp-action="AllComments" asp-controller="Admin" asp-area="Membership">
                <span class="d-flex align-items-center">
                    <i class="fas fa-users-cog"></i>
                    <span>کامنت های ارسالی جدید</span>
                </span>
            </a>
        </li>
    }

    <li>
        <a is-active-route
           asp-action="UploadPost" asp-controller="Panel" asp-area="Membership">
            <span class="d-flex align-items-center">
                <i class="fas fa-upload"></i>
                <span>ارسال آموزش</span>
            </span>
        </a>
    </li>
    <li>
        <a is-active-route
           asp-action="UploadPost" asp-controller="Panel" asp-area="Membership" asp-route-postTypeString="Product">
            <span class="d-flex align-items-center">
                <i class="fas fa-upload"></i>
                <span>شرکت در بازارچه</span>
            </span>
        </a>
    </li>

    @if (Context.User.IsInRole("MamiAdministrator"))
    {
        <li>
            <a is-active-route
               asp-action="reportedcomments" asp-controller="admin" asp-area="Membership">
                <span class="d-flex align-items-center">
                    <i class="fas fa-users-cog"></i>
                    <span>گزارش کامنت</span>
                </span>
            </a>
        </li>
    }
    <li>
        <a is-active-route
           asp-action="ManageMyPosts" asp-controller="Panel">
            <span class="d-flex align-items-center">
                <i class="fas fa-cogs"></i>
                <span>آموزش و محصولات بازارچه من</span>
            </span>
        </a>
    </li>
   
    <li>
        <a is-active-route
           asp-action="UserSettings" asp-controller="Panel">
            <span class="d-flex align-items-center">
                <i class="fas fa-cogs"></i>
                <span>تنظیمات کاربر</span>
            </span>
        </a>
    </li>
    <li>
        <a is-active-route
           asp-action="ChangePassword" asp-controller="Panel">
            <span class="d-flex align-items-center">
                <i class="fas fa-cogs"></i>
                <span>تغییر رمز عبور</span>
            </span>
        </a>
    </li>
    @if (Context.User.IsInRole("MamiAdministrator"))
    {
        <li>
            <a is-active-route
               asp-action="Users" asp-controller="Admin" asp-area="Membership">
                <span class="d-flex align-items-center">
                    <i class="fas fa-users-cog"></i>
                    <span>کاربران</span>
                </span>
            </a>
        </li>
    }
    <li>
        <a asp-area="Membership" asp-action="SuspendMyUser" asp-controller="Panel">
            <span class="d-flex align-items-center">
                <i class="fas fa-recycle"></i>
                <span>حذف حساب کاربری</span>
            </span>
        </a>
    </li>
    <li>
        <a asp-action="Logout" asp-controller="Account">
            <span class="d-flex align-items-center">
                <i class="fas fa-sign-out-alt"></i>
                <span>خروج</span>
            </span>
        </a>
    </li>
</ul>
</div>