@model User
@{
    Layout = "_Layout";
}
<div class="row align-items-center justify-content-center" style="width:100%">
    <div class="d-none d-md-flex col-md-2 col-lg-4"></div>
    <div class="container-fluid mr-2 text-center justify-content-center col-12 col-md-8 col-lg-4 align-items-center" >
        <div class="bg-primary text-white m-1 p-1">
            <h4>ایجاد نام کاربری</h4>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mt-1"></div>


        <form asp-controller="Register" asp-action="MakeRegister" method="post">
            <div class="form-group">
                <label asp-for="FullName">نام و نام خانوادگی</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NickName">نام مستعار ( در سایت با این نام شناخته می شوید)</label>
                <span asp-validation-for="NickName" class="text-danger"></span>
                <input asp-for="NickName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">ایمیل (اختیاری- فقط در صورت تمایل)</label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Mobile">شماره موبایل</label>
                <span asp-validation-for="Mobile" class="text-danger"></span>
                <input asp-for="Mobile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">رمز عبور</label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="custom-control custom-checkbox mb-4">
                <input asp-for="TermsAccepted" class="custom-control-input" />
                <span asp-validation-for="TermsAccepted" class="text-danger"></span>
                <label asp-for="TermsAccepted" class="custom-control-label">
                    قوانین سایت را مطالعه کرده و با آنها موافقم
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="d-none d-md-flex col-md-2 col-lg-4"></div>
</div>
@section ViewScript  {
    <script>
        $(function () {
            $("input.input-validation-error").addClass("is-invalid");
        })
    </script>
}